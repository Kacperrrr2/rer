<Window x:Class="KonteneryApp.StackPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KonteneryApp"
        mc:Ignorable="d"
        Title="StackPanelWindow" Height="200" Width="400">
    <StackPanel Orientation="Vertical">
        <Button Content="Pierwszy przycisk"/>
        <CheckBox Content="Pierwsza opcja"
                  Height="50"
                  Width="40"/>
        <CheckBox Content="Druga opcja"/>
        <Button Content="Drugi przycisk"/>
    </StackPanel>
</Window>
